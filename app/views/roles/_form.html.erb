<div class="container" style="margin-top:15px;">
  <div class="col-sm-12">
    <div class="row">
      <div style="margin-bottom:0" class="panel panel-default">
        <div class="panel-heading">
          <span style="color:#333333; "> <strong>Welcome, Please Sign up.. </strong></span>
        </div>
        <div class="panel-body" style=" font-size:12px;">
          <div class="col-sm-6 col-sm-push-6">
            <div class="form-container">
              <%= form_for @user, url: roles_path, html: {class: 'form-horizontal'} do |f| %>
                <div class="form-group">
                  <%= f.label :name, class: 'col-sm-2 control-label' %>
                  <div class="col-sm-9">
                    <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Name", required: true %>
                  </div>
                </div>

                <div class="form-group">
                  <%= f.label :email, class: 'col-sm-2 control-label' %>
                  <div class="col-sm-9">
                    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", required: true %>
                  </div>
                </div>

                <div class="form-group">
                  <%= label_tag :role, 'Role', class: 'col-sm-2 control-label' %>
                  <div class="col-sm-9">
                    <%= select_tag :role, options_for_select([["Manager", "manager"], ["Cashier", "cashier"], ["Baker", "baker"]]), class: "form-control" %>
                  </div>
                </div>

                <div class="text-center">
                  <button class="btn btn-default btn-cancel close-modal" type="reset"><%= t(:Cancel) %></button>
                  <button action="create" class="btn btn-primary" method="post" type="submit"><%= t(:sign_up) %></button>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-sm-6 col-sm-pull-6 hidden-xs">
            <img class="img-responsive" src="/assets/pizza.jpg" alt="pizza">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>