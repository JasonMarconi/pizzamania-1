<br><br>
<h1>Listing Pizza Types</h1>

<div class="table-responsive">
  <% if @pizza_types.present? %>
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @pizza_types.each do |pizza_type| %>
        <tr>
          <td><%= pizza_type.name %></td>
          <td>
            <%= link_to 'Show', pizza_type, class: "btn btn-primary" %>
            <%= link_to 'Edit', edit_pizza_type_path(pizza_type), class: "btn btn-primary" %>
            <%= link_to 'Destroy', pizza_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No order found.</p>
  <% end %>
</div>

<%= link_to 'New Pizza type', new_pizza_type_path, class: 'btn btn-success' %>
