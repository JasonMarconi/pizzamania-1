<p id="notice"><%= notice %></p>

<p>
  <strong>Customer name:</strong>
  <%= @order.customer_name %>
</p>

<p>
  <strong>Customer phone:</strong>
  <%= @order.customer_phone %>
</p>

<p>
  <strong>Pickup datetime:</strong>
  <%= @order.pickup_datetime %>
</p>

<p>
  <strong>Pizza type:</strong>
  <%= @order.pizza_type.try(:name) %>
</p>

<p>
  <strong>Size:</strong>
  <%= @order.size %>
</p>

<p>
  <strong>Is completed:</strong>
  <%= @order.is_completed ? 'Yes' : 'No' %>
</p>

<p>
  <strong>Is ready:</strong>
  <%= @order.is_ready ? 'Yes' : 'No' %>
</p>

<%= link_to 'Edit', edit_order_path(@order), class: 'btn btn-primary' %>
<%= link_to 'Back', orders_path, class: 'btn btn-default' %>
